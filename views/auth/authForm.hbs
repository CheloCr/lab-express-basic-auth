<div class="user">
    {{#if isSignUp}}
    <header class="user__header">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
        <h1 class="user__title">Registrate para formar parte de la comunidad</h1>
    {{else}}
    <header class="user__header">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
        <h1 class="user__title">Ingresa a tu perfil</h1>
    {{/if}}
    
    </header>

<form class="form" action="{{#if isSignUp}}/user/signup{{else}}/user/login{{/if}} " method="post">
       
        
        <div class="form__group">
            <input type="text" name="username" placeholder="Correo Electrónico" class="form__input" />
        </div>
        
        <div class="form__group">
            <input type="password"  name="password" placeholder="Contraseña" class="form__input" />
        </div>
        
        <button class="btn" type="submit">Enviar</button>
    </form>

